---
layout: layouts/base.njk
templateClass: tmpl-staticpage
---
<article>
  <h1><a href=".">{{ page.title }}</a></h1>
  {% if page.mainImage %}
    <figure>
      <img src="{{ page.mainImage.url }}?w=960&fit=max" alt="{{ page.mainImage.alt }}" />
      <figcap>{{ page.mainImage.caption }}</figcap>
    </figure>
  {% endif %}
  <p>Written by {% for author in page.authors %}<a href="/authors/{{author.slug}}">{{author.name}}</a>{% endfor %}  </p>
  <p>Categories {% for category in page.categories %}<a href="/categories/{{category.title | slug}}">{{category.title}}</a>{% endfor %}  </p>
  {{ page.body | markdownify | safe }}
  <p><a href="{{ '/' | url }}">‚Üê Home</a></p>
</article>
